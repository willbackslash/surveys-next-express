generator client {
  provider = "prisma-client-js"
}

// uncomment sqlite datasource for development
// datasource db {
//  provider = "sqlite"
//  url      = "file:/tmp/surveys.db"
//}

 datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Survey {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  options     Option[]
}

model Option {
  id      Int     @id @default(autoincrement())
  index   Int
  name    String
  survey  Survey? @relation(fields: [surveyId], references: [id])
  surveyId Int?
}
